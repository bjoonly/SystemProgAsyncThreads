<Window x:Class="Task6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task6"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="450">
    <DockPanel LastChildFill="False">
        <TextBlock DockPanel.Dock="Left" Height="30" FontSize="17" Margin="5,0" >Facrorial</TextBlock>
        <TextBox x:Name="numberTextBox" Width="100" Height="30" DockPanel.Dock="Left" FontSize="15" Margin="5,0"></TextBox>
        <Button Width="30" Height="30" DockPanel.Dock="Left" FontSize="15" Margin="5,0" Click="Button_Click">=</Button>
        <TextBlock x:Name="resultTextBlock" DockPanel.Dock="Left" Height="30" Width="200" FontSize="15" Margin="5,0" Background="WhiteSmoke"></TextBlock>

    </DockPanel>
</Window>
